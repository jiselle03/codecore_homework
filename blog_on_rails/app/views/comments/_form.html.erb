<%= form_with(model: @comment, url: [@post, @comment], local: true) do |form|%>

<div>
    <% if @comment.errors.present? %>
    <%= @comment.errors.full_messages.join(', ')%>
    <% end %>
</div>

<div>
    <h4><%= form.label :body, "Comment" %></h4>
    <%= form.text_area :body, cols: 50, rows:5, placeholder: "What's on your mind?"%><br>
    <%= form.submit "Submit", :class => "btn btn-outline-primary" %>
</div>

<% end %>