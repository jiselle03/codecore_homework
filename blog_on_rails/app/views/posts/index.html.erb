<div class="container-fluid">

<div class="cards-container">

<% @posts.each do |post| %>

<div class="card mb-3">

  <div class="card-body">
    <h5 class="card-title"><%= link_to(post.title, post_path(post.id)) %></h5>
    <p class="card-text"><%= post.body.truncate(50, separator: ' ') %></p>
    <small class="card-text">Posted by <%= post.user.name %> <%= time_ago_in_words(post.created_at) %> ago</small>
  </div>

</div>

<% end %>

</div>

</div>