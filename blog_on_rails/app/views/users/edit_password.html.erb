<main class="container">

<div class="box">

<br>
<h3 class="h3 mb-3 font-weight-normal">Change Password</h3>

<%= form_with url: update_password_path(@user), method: "patch", local: true do |f| %>

    <% if @user.errors.any? %>
        <p><%= @user.errors.full_messages.join(", ") %></p>
    <% end %>

    <div class="form-row">
        <div class="col">
            <%= f.label :old_password, "Old Password" %>
            <%= f.password_field :old_password, name: "user[old_password]", class: "form-control", placeholder: "Old Password" %>
            <%= f.label :new_password, "New Password" %>
            <%= f.password_field :new_password, name: "user[new_password]", class: "form-control", placeholder: "New Password" %>
            <%= f.password_field :new_password_confirmation, name: "user[new_password_confirmation]", class: "form-control", placeholder: "Confirm New Password" %>
        </div>
    </div>
<br>
    <%= f.submit "Update", :class => "btn btn-outline-primary center" %>

<% end %>

<br>
</div>
</main>