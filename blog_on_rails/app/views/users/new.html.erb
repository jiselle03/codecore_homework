<main class="container">

<div class="box">

<br>
<h3 class="h3 mb-3 font-weight-normal">Sign up</h3>

<%= form_with model: @user, local: true do |f| %>

    <% if @user.errors.any? %>
        <p><%= user.errors.full_messages.join(", ") %></p>
    <% end %>

    <div class="form-row">
        <div class="col">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", placeholder: "John Smith" %>
            <%= f.label :email_address %>
            <%= f.email_field :email, class: "form-control", placeholder: "name@example.com" %>
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
        </div>
    </div>
<br>
    <%= f.submit "Create Account", :class => "btn btn-outline-primary center" %>

<% end %>
<hr>

<p class="alt-option">
Already have an account? <%= link_to("Sign in here", new_session_path) %>.
</p>

</div>
</main>